{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test Spec",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "${fileBasenameNoExtension}",
                "--config",
                "test/jest.config.js",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}